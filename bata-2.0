#include <windows.h>
bool key(int key)
{
	return (GetAsyncKeyState(key) & 0x8000);
}
bool show;
int main() 
{
	HWND window;
	while (1)
	{
		if (key(VK_SHIFT) && key('R') && show == 1)
		{
			window = GetForegroundWindow();
		}
		if (key(VK_SHIFT) && key('Z'))
		{
			ShowWindow(window, SW_HIDE);
			show = 0;
		}
		if (key(VK_SHIFT) && key('X'))
		{
			ShowWindow(window, SW_SHOW);
			show = 1;
		}
		Sleep(100);
	}
	return 0;
}
